<%# locals: (title:) %>

<header class="bg-rose-200 shadow">
  <div class="mx-auto max-w-full px-4 py-4 sm:py-6 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-4 align-middle">
        <%= link_to "#", class: "flex items-center space-x-2" do %>
          <%= render("shared/logo") %>
          <div class="text-xl sm:text-3xl font-bold leading-tight tracking-tight text-gray-800">
            <%= title %>
          </div>
        <% end %>
      </div>

      <div class="flex items-center space-x-4">
        <%= link_to "Sign up", "#", class: "rounded-md bg-white px-3 py-2 text-gray-900 hover:bg-gray-50" %>
        <%= link_to "Log in", "#", class: "rounded-md bg-white px-3 py-2 text-gray-900 hover:bg-gray-50" %>
      </div>
  </div>
</header>