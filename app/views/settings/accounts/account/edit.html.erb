<div class="min-h-full">
  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
      <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900 mb-8">Account Settings</h1>
      
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Account Information</h3>
          
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700">Email</label>
              <p class="mt-1 text-sm text-gray-900"><%= current_user.email %></p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700">Member since</label>
              <p class="mt-1 text-sm text-gray-900"><%= current_user.created_at.strftime("%B %d, %Y") %></p>
            </div>
          </div>
          
          <div class="mt-6">
            <%= link_to "Edit Personal Details", edit_settings_personal_details_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-rose-600 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
