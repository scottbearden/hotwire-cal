<div class="min-h-full">
  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
      <div class="mb-6">
        <%= link_to "← Back to Account Settings", edit_settings_account_path, 
            class: "text-rose-600 hover:text-rose-500 text-sm font-medium" %>
      </div>
      
      <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900 mb-8">Personal Details</h1>
      
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <%= form_with(model: @user, url: settings_personal_details_path, method: :patch, local: true) do |form| %>
            <div class="space-y-6">
              <div>
                <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_field :name, 
                    class: "mt-1 block w-full shadow-sm focus:ring-rose-500 focus:border-rose-500 border-gray-300 rounded-md" %>
                <% if @user.errors[:name].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @user.errors[:name].first %></p>
                <% end %>
              </div>
              
              <div>
                <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
                <%= form.email_field :email, 
                    class: "mt-1 block w-full shadow-sm focus:ring-rose-500 focus:border-rose-500 border-gray-300 rounded-md" %>
                <% if @user.errors[:email].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @user.errors[:email].first %></p>
                <% end %>
              </div>
              
              <div>
                <%= form.label :handle, "Username", class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_field :handle, 
                    class: "mt-1 block w-full shadow-sm focus:ring-rose-500 focus:border-rose-500 border-gray-300 rounded-md" %>
                <p class="mt-1 text-sm text-gray-500">Only lowercase letters, numbers, and underscores allowed.</p>
                <% if @user.errors[:handle].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @user.errors[:handle].first %></p>
                <% end %>
              </div>
              
              <div>
                <%= form.label :timezone, class: "block text-sm font-medium text-gray-700" %>
                <%= form.select :timezone, 
                    options_for_select([
                      ["Eastern Time (US & Canada)", "Eastern Time (US & Canada)"],
                      ["Central Time (US & Canada)", "Central Time (US & Canada)"],
                      ["Mountain Time (US & Canada)", "Mountain Time (US & Canada)"],
                      ["Pacific Time (US & Canada)", "Pacific Time (US & Canada)"],
                      ["Alaska", "Alaska"],
                      ["Hawaii", "Hawaii"]
                    ], @user.timezone),
                    {},
                    { class: "mt-1 block w-full shadow-sm focus:ring-rose-500 focus:border-rose-500 border-gray-300 rounded-md" } %>
                <% if @user.errors[:timezone].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @user.errors[:timezone].first %></p>
                <% end %>
              </div>
              
              <div class="flex justify-end">
                <%= form.submit "Save Changes", 
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-rose-600 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
